<% unless current_micropost ==micropost %>
  <% if current_micropost.loving?(micropost) %>
    <%= form_with(model: current_micropost.favorites.find_by(favorite_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :favorite_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_micropost.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :favorite_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>